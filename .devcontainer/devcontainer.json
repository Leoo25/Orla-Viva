{
  "name": "Orla Viva (Python + Node + LFS)",
  
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installSudo": true,
      "username": "vscode",
      "userUid": "automatic",
      "userGid": "automatic",
      "nonFreePackages": true,
      "passwordlessSudo": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/git-lfs:1": {
      "installInContainer": true
    }
  },

  "forwardPorts": [8000],

  "postCreateCommand": "python3 -m venv venv && sudo sh -c 'echo \"vscode ALL=(ALL) NOPASSWD:ALL\" > /etc/sudoers.d/90-vscode'",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "remoteUser": "vscode"
}
